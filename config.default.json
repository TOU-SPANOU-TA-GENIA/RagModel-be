{
  "llm": {
    "model_name": "./offline_models/qwen3-4b",
    "max_new_tokens": 256,
    "temperature": 0.7,
    "top_p": 0.9,
    "do_sample": true,
    "repetition_penalty": 1.1,
    "device": "auto",
    "quantization": "4bit",
    "trust_remote_code": true
  },
  "embedding": {
    "model_name": "sentence-transformers/all-MiniLM-L6-v2",
    "device": "cpu",
    "batch_size": 32,
    "cache_enabled": true
  },
  "rag": {
    "top_k": 5,
    "chunk_size": 500,
    "chunk_overlap": 50,
    "min_relevance_score": 0.3,
    "use_hybrid_search": false
  },
  "agent": {
    "mode": "enhanced",
    "use_cache": true,
    "debug_mode": false,
    "max_iterations": 10
  },
  "tools": {
    "max_file_size_mb": 10,
    "allowed_extensions": [
      ".txt",
      ".md",
      ".text",
      ".json",
      ".yaml",
      ".yml",
      ".conf",
      ".config",
      ".cfg",
      ".log",
      ".py",
      ".sh",
      ".bash",
      ".xml",
      ".html",
      ".csv"
    ],
    "allowed_commands": [
      "ls",
      "pwd",
      "echo",
      "date",
      "whoami",
      "df",
      "free"
    ],
    "show_file_content": true,
    "file_content_format": "pretty",
    "max_content_display_lines": null
  },
  "memory": {
    "max_sessions": 100,
    "session_timeout": 3600,
    "max_history_messages": 10,
    "store_instructions": true,
    "instruction_timeout": 3600
  },
  "server": {
    "host": "localhost",
    "port": 8000,
    "cors_origins": [
      "http://localhost:4200",
      "http://127.0.0.1:4200"
    ],
    "log_level": "INFO",
    "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "paths": {
    "base_dir": "",
    "data_dir": "data",
    "index_dir": "faiss_index",
    "outputs_dir": "outputs",
    "offload_dir": "offload",
    "offline_models_dir": "offline_models"
  },
  "documents": {
    "default_format": "docx",
    "include_metadata": true,
    "template_dir": "templates"
  },
  "response": {
    "max_response_length": 2000,
    "use_markdown": true,
    "include_sources": true,
    "stream_responses": false
  },
  "network_filesystem": {
    "enabled": true,
    "auto_start_monitoring": true,
    "shares": [
      {
        "name": "shared_docs",
        "mount_path": "Z:",
        "share_type": "smb",
        "enabled": true,
        "auto_index": true,
        "watch_for_changes": true,
        "scan_interval": 300,
        "include_extensions": [
          ".txt",
          ".md",
          ".pdf",
          ".doc",
          ".docx",
          ".xls",
          ".xlsx",
          ".csv",
          ".json",
          ".yaml",
          ".ppt",
          ".pptx",
          ".log",
          ".xml",
          ".html"
        ],
        "exclude_patterns": [
          ".*",
          "~$*",
          "Thumbs.db",
          "desktop.ini",
          "*.tmp",
          "*.temp",
          "$RECYCLE.BIN",
          "System Volume Information"
        ],
        "max_file_size_mb": 100
      }
    ]
  }
}