{
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "log_level": "INFO",
    "cors_origins": [
      "http://localhost:4200",
      "http://localhost:3000"
    ],
    "enable_docs": true,
    "debug_mode": false
  },
  "paths": {
    "base_dir": ".",
    "data_dir": "data",
    "index_dir": "faiss_index",
    "outputs_dir": "outputs",
    "offline_models_dir": "offline_models"
  },
  "security": {
    "secret_key": "CHANGE_THIS_TO_A_LONG_RANDOM_STRING_IN_PRODUCTION",
    "algorithm": "HS256",
    "access_token_expire_minutes": 60,
    "users": [
      {
        "username": "admin",
        "full_name": "System Administrator",
        "email": "admin@example.com",
        "hashed_password": "",
        "disabled": false
      },
      {
        "username": "test",
        "hashed_password": "$2b$12$DtvWow1t32.yC67pGrkQC.T6ANt6SQk5hkwN.71d16VuUtArba0qW",
        "full_name": "test",
        "email": "test@test.com",
        "disabled": false
      },
      {
        "username": "test1",
        "hashed_password": "$2b$12$WsgC5jef9mrdGJ36VNDkcOEYlVwiuWdjN8tKZIyym.RjY.s/.B6RC",
        "full_name": "test1",
        "email": "test1@test.com",
        "disabled": false
      }
    ]
  },
  "llm": {
    "provider": "local",
    "model_path": "./offline_models/qwen3-4b",
    "device": "auto",
    "quantization": "4bit",
    "max_new_tokens": 1024,
    "temperature": 0.3,
    "top_p": 0.9,
    "repetition_penalty": 1.1,
    "prompt_style": "qwen",
    "show_thinking": true
  },
  "rag": {
    "embedding_model": "sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2",
    "chunk_size": 500,
    "chunk_overlap": 50,
    "top_k": 3,
    "min_relevance_score": 0.35,
    "enable_rag": true
  },
  "agent": {
    "mode": "production",
    "system_prompt_key": "greek_military",
    "rag_on_tools": false,
    "use_llm_routing": false,
    "intent_patterns": {
      "chat": [
        "γεια",
        "καλημέρα",
        "ποιος είσαι",
        "hello",
        "hi"
      ],
      "system_diagnostics": [
        "έλεγχος συστήματος",
        "system check",
        "status",
        "gpu",
        "υγεία"
      ],
      "analyze_document": [
        "ανάλυσε",
        "αναφορά",
        "briefing",
        "analyze",
        "logistics",
        "audit"
      ],
      "search_knowledge_base": [
        "βρες",
        "search",
        "κανονισμός",
        "νόμος",
        "διαταγή",
        "σύμφωνα με"
      ]
    }
  },
  "tools": {
    "read_file": {
      "enabled": true
    },
    "write_file": {
      "enabled": true
    },
    "list_files": {
      "enabled": true
    },
    "search_knowledge_base": {
      "enabled": true
    },
    "system_diagnostics": {
      "enabled": true
    },
    "analyze_document": {
      "enabled": true
    }
  },
  "prompt_templates": {
    "greek_military": "Είσαι ένας εξειδικευμένος στρατιωτικός βοηθός AI (Qwen). Απαντάς πάντα στα Ελληνικά με ακρίβεια και σοβαρότητα. Χρησιμοποίησε τα εργαλεία για να επιβεβαιώσεις πληροφορίες.",
    "default_english": "You are a helpful AI assistant."
  },
  "network_filesystem": {
    "enabled": true,
    "auto_start_monitoring": true,
    "force_polling": true,
    "polling_interval": 10,
    "shares": [
      {
        "path": "Z:",
        "auto_index": true
      }
    ]
  },
  "localization": {
    "default_language": "greek",
    "overrides": {
      "errors": {
        "generic": "Παρουσιάστηκε σφάλμα συστήματος.",
        "file_not_found": "Το αρχείο {path} δεν εντοπίστηκε."
      },
      "logs": {
        "thinking": "Επεξεργασία δεδομένων..."
      }
    }
  },
  "workflows": [
    {
      "id": "daily_system_check",
      "name": "Daily Health Check",
      "description": "Runs diagnostics every morning.",
      "enabled": true,
      "trigger": {
        "type": "schedule",
        "config": {
          "interval_minutes": 1440
        }
      },
      "steps": [
        {
          "id": "step1",
          "name": "Check Hardware",
          "tool": "system_diagnostics",
          "params": {
            "check_type": "all"
          },
          "output_key": "health_report"
        },
        {
          "id": "step2",
          "name": "Log Result",
          "tool": "write_file",
          "params": {
            "filename": "daily_health_log.txt",
            "content": "Daily Check Result:\n{{ health_report }}"
          }
        }
      ]
    }
  ]
}