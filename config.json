{
  "llm": {
    "model_name": "./offline_models/qwen3-4b",
    "max_new_tokens": 512,
    "trust_remote_code": true,
    "temperature": 0.7,
    "top_p": 0.9,
    "repetition_penalty": 1.1,
    "do_sample": true,
    "quantization": "4bit",
    "device": "auto",
    "prewarm_enabled": true,
    "prewarm_prompts": ["Hello", "Hi", "Hey"],
    "prewarm_delay": 0.5
  },
  "embedding": {
    "model_name": "sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2",
    "dimension": 384,
    "normalize": true,
    "batch_size": 32,
    "cache_enabled": true,
    "max_cache_size": 10000
  },
  "rag": {
    "top_k": 3,
    "min_relevance_score": 0.6,
    "chunk_size": 250,
    "chunk_overlap": 50,
    "use_faiss": false,
    "rerank_enabled": false
  },
  "agent": {
    "mode": "enhanced",
    "debug_mode": false,
    "use_cache": true,
    "max_tool_retries": 2,
    "tool_timeout": 30.0,
    "action_keyword_weight": 1.5,
    "question_keyword_weight": 1.0,
    "conversation_keyword_weight": 0.5,
    "min_confidence_threshold": 0.5,
    "enable_thinking": true,
    "language": "greek"
  },
  "tools": {
    "max_file_size_mb": 10,
    "allowed_extensions": [
      ".txt", ".md", ".text", ".json", ".yaml", ".yml",
      ".conf", ".config", ".cfg", ".log", ".py", ".sh",
      ".bash", ".xml", ".html", ".csv"
    ],
    "allowed_commands": ["ls", "pwd", "echo", "date", "whoami", "df", "free"],
    "show_file_content": true,
    "file_content_format": "pretty",
    "max_content_display_lines": null
  },
  "memory": {
    "max_sessions": 100,
    "session_timeout": 3600,
    "max_history_messages": 10,
    "store_instructions": true,
    "instruction_timeout": 3600
  },
  "server": {
    "host": "localhost",
    "port": 8000,
    "cors_origins": ["http://localhost:4200", "http://127.0.0.1:4200"],
    "log_level": "INFO",
    "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "paths": {
    "base_dir": "",
    "data_dir": "data",
    "index_dir": "faiss_index",
    "outputs_dir": "outputs",
    "offload_dir": "offload",
    "offline_models_dir": "offline_models"
  },
  "documents": {
    "default_font_family": "Arial",
    "default_font_size": 11,
    "default_heading_size": 14,
    "default_margin_inches": 1.0,
    "include_metadata": true,
    "timestamp_format": "%Y-%m-%d %H:%M:%S"
  },
  "response": {
    "clean_thinking_tags": true,
    "clean_xml_tags": true,
    "clean_meta_commentary": true,
    "normalize_whitespace": true,
    "max_response_length": null,
    "language": "greek"
  },
  "network_filesystem": {
    "enabled": true,
    "auto_index": true,
    "auto_start_monitoring": true,
    "index_interval": 300,
    "file_extensions": [".txt", ".md", ".pdf", ".docx"],
    "shares": [
      {
        "name": "shared_docs",
        "mount_path": "Z:",
        "share_type": "smb",
        "enabled": true,
        "auto_index": true,
        "watch_for_changes": true,
        "scan_interval": 300,
        "include_extensions": [
          ".txt",
          ".md",
          ".pdf",
          ".doc",
          ".docx",
          ".xls",
          ".xlsx",
          ".csv",
          ".json",
          ".yaml",
          ".ppt",
          ".pptx",
          ".log",
          ".xml",
          ".html"
        ],
        "exclude_patterns": [
          ".*",
          "~$*",
          "Thumbs.db",
          "desktop.ini",
          "*.tmp",
          "*.temp",
          "$RECYCLE.BIN",
          "System Volume Information"
        ],
        "max_file_size_mb": 100
      }
    ]
  },
  "streaming": {
    "enabled": true,
    "chunk_delay_ms": 20
  },
  "localization": {
    "default_language": "greek",
    "force_greek_responses": true
  }
}